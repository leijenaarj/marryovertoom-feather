---
import { Icon } from 'astro-icon/components';
import { SOCIAL_LINKS } from '../consts';

// Simple mapping of icons and titles
const ICONS = {
  twitter: { icon: 'simple-icons:x', label: 'Twitter' },
  linkedin: { icon: 'simple-icons:linkedin', label: 'LinkedIn' },
  instagram: { icon: 'simple-icons:instagram', label: 'Instagram' },
  github: { icon: 'simple-icons:github', label: 'GitHub' },
  youtube: { icon: 'simple-icons:youtube', label: 'YouTube' },
  medium: { icon: 'simple-icons:medium', label: 'Medium' },
  mastodon: { icon: 'simple-icons:mastodon', label: 'Mastodon' },
} as const;
---

<div class="flex items-center gap-3 flex-wrap">
  {Object.entries(SOCIAL_LINKS).map(([platform, url]) => {
    const config = ICONS[platform as keyof typeof ICONS];
    if (!config) return null;

    return (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="group"
        title={`Follow on ${config.label}`}
      >
        <span class="sr-only">{config.label}</span>
        <div class="p-2 -rotate-1 hover:rotate-0 transition-transform duration-300">
          <Icon
            name={config.icon}
            class="w-4 h-4 text-stone-500 group-hover:text-stone-800 transition-colors duration-300"
          />
        </div>
      </a>
    );
  })}
</div>
