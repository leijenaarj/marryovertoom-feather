---
import SocialLinks from './SocialLinks.astro';
import { BLOG_CONFIG } from '../consts';
import { Image } from 'astro:assets';

interface Props {
  name?: string;
  title?: string;
  bio?: string;
  imageSrc?: ImageMetadata;
}

const {
  name = BLOG_CONFIG.author.name,
  title = BLOG_CONFIG.author.title,
  bio = BLOG_CONFIG.author.bio,
  imageSrc = BLOG_CONFIG.author.avatar,
} = Astro.props;
---

<div class="relative py-16 sm:py-24 md:py-32">
  <!-- Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-b from-stone-50 via-stone-100/10 to-stone-50"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(0,0,0,0.02),transparent_70%)]"></div>
  </div>

  <!-- Top border -->
  <div class="absolute top-0 w-full h-px bg-gradient-to-r from-transparent via-stone-200/50 to-transparent"></div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6">
    <!-- Header -->
    <div class="relative mb-8 sm:mb-16 pl-8 sm:pl-12">
      <span class="absolute left-0 top-1/2 -translate-y-1/2 w-6 sm:w-8 h-px bg-stone-400"></span>
      <span class="font-mono text-sm text-stone-400 tracking-wider">Over de kunstenaar</span>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 md:grid-cols-[200px_1fr] gap-8 md:gap-16 items-start">
      <!-- Image Column -->
      {!!imageSrc && (
      <div class="relative group max-w-[180px] md:max-w-none mx-auto md:mx-0">
        <div class="absolute inset-0 bg-stone-400/30 rounded-xl rotate-3 transition duration-500 group-hover:rotate-6"></div>
        <div class="relative overflow-hidden rounded-lg rotate-2 transition duration-500 group-hover:rotate-0">
          <div class="aspect-[4/5] bg-stone-100">
            <Image
              src={imageSrc}
              alt={name}
              width={209}
              height={257}
              densities={[1, 2]}
              class="w-full h-full object-cover transition duration-700 group-hover:scale-105"
            />
          </div>
        </div>
      </div>
      )}

      <!-- Content Column -->
      <div class="flex flex-col gap-6 sm:gap-8">
        <!-- Name & Title -->
        <div class="relative pl-8 sm:pl-12">
          <span class="absolute left-0 top-[1.3em] w-6 sm:w-8 h-px bg-stone-400"></span>
          <h2 class="font-primary text-3xl sm:text-4xl text-stone-900 mb-2">{name}</h2>
          <p class="font-mono text-sm tracking-wider text-stone-500">{title}</p>
        </div>

        <!-- Bio -->
        <div class="relative pl-8 sm:pl-12">
          <span class="absolute left-0 top-[0.8em] w-6 sm:w-8 h-px bg-stone-400"></span>
          <p class="text-base sm:text-lg text-stone-600 leading-relaxed">{bio}</p>
        </div>

        <!-- Social Links -->
        <div class="relative pl-8 sm:pl-12 pt-2 sm:pt-4">
          <div class="space-y-4 sm:space-y-6">
            <SocialLinks />
            <a href="/info" class="group inline-flex items-center gap-2 sm:gap-3">
              <span class="font-mono text-sm text-stone-500 group-hover:text-stone-800 transition-colors duration-300">Lees alle informatie</span>
              <span class="w-6 sm:w-8 h-px bg-stone-400 group-hover:w-8 sm:group-hover:w-12 group-hover:bg-stone-300 transition-all duration-300"></span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom border -->
  <div class="absolute bottom-0 w-full h-px bg-gradient-to-r from-transparent via-stone-200/50 to-transparent"></div>
</div>
