---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';

interface Props {
	title: string;
	description: string;
	heroImage?: string;
}

const { title, description, heroImage } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${title} | ${SITE_TITLE}`} description={description} />
	</head>
	<body class="bg-stone-50 text-stone-900 min-h-screen flex flex-col">
		<Header />
		<main class="flex-1 w-full">
			<article class="relative">
				<!-- Background -->
				<div class="absolute inset-0">
					<div class="absolute inset-0 bg-gradient-to-b from-stone-100/50 via-stone-50/50 to-transparent"></div>
					<div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(0,0,0,0.02),transparent_70%)]"></div>
				</div>

				<div class="relative max-w-6xl mx-auto px-6">
					<div class="py-24 md:py-32">
						<div class="relative max-w-3xl">
							<div class="mb-16">
								<h1 class="font-primary text-4xl sm:text-6xl md:text-7xl text-stone-900 leading-[1.15] tracking-normal">
									{title}
								</h1>
								{description && (
									<p class="mt-8 text-base sm:text-lg text-stone-600 leading-relaxed max-w-2xl">
										{description}
									</p>
								)}
							</div>

							{heroImage && (
								<div class="relative mb-16">
									<div class="absolute inset-0 bg-stone-200/50 rounded-2xl -rotate-1"></div>
									<div class="relative aspect-[2/1] overflow-hidden rounded-xl">
										<Image
											src={heroImage}
											alt=""
											width={1200}
											height={600}
											class="w-full h-full object-cover"
										/>
									</div>
								</div>
							)}

							<div class="prose prose-stone lg:prose-lg prose-headings:font-primary prose-p:text-stone-600 prose-a:text-stone-900 hover:prose-a:text-stone-600 prose-a:no-underline prose-a:border-b prose-a:border-stone-300 hover:prose-a:border-stone-600 prose-blockquote:border-l-stone-200 prose-blockquote:text-stone-600 prose-blockquote:not-italic prose-blockquote:pl-6 prose-hr:border-stone-200">
								<slot />
							</div>
						</div>
					</div>
				</div>

			</article>
		</main>
		<Footer />
	</body>
</html>
