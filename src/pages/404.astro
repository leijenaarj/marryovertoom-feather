---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import FeatherIcon from '../components/FeatherIcon.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`404 Not Found | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-stone-50 text-stone-900 min-h-screen flex flex-col">
		<Header />
		<main class="flex-1 w-full">
			<div class="relative">
				<!-- Background -->
				<div class="absolute inset-0">
					<div class="absolute inset-0 bg-gradient-to-b from-stone-100/50 via-stone-50/50 to-transparent"></div>
					<div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(0,0,0,0.02),transparent_70%)]"></div>
				</div>

				<div class="relative max-w-6xl mx-auto px-6 py-32 md:py-40">
					<div class="flex flex-col items-center text-center">
						<!-- Icon -->
						<div class="relative mb-12">
							<div class="absolute inset-0 bg-stone-200/30 rounded-xl rotate-6"></div>
							<div class="relative p-8 -rotate-3">
								<FeatherIcon class="w-16 h-16 text-stone-600" />
							</div>
						</div>

						<!-- Title -->
						<div class="relative mb-8">
							<div class="inline-flex items-center gap-3 mb-8">
								<span class="w-8 h-px bg-stone-200"></span>
								<span class="font-mono text-sm text-stone-500 tracking-tight">404 Error</span>
								<span class="w-8 h-px bg-stone-200"></span>
							</div>
							<h1 class="font-primary text-4xl sm:text-5xl text-stone-900 leading-tight">
								Page Not Found
							</h1>
						</div>

						<!-- Description -->
						<div class="relative max-w-xl mb-16">
							<p class="text-xl text-stone-600 leading-relaxed">
								The page you're looking for doesn't exist or has been moved. Let's get you back on track.
							</p>
						</div>

						<!-- Action -->
						<div class="flex items-center gap-12">
							<a href="/" class="group inline-flex items-center gap-3">
								<span class="font-mono text-sm text-stone-600 group-hover:text-stone-900 transition-colors duration-300">Return Home</span>
								<span class="w-8 h-px bg-stone-200 group-hover:w-12 group-hover:bg-stone-300 transition-all duration-300"></span>
							</a>
						</div>
					</div>
				</div>

			</div>
		</main>
		<Footer />
	</body>
</html>
